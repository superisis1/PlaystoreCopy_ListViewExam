<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/appIconImg"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/appTitleTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1. 앱제목"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/appCompanyTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="업체명" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp">

                    <ImageView
                        android:id="@+id/starImg1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="-2dp"
                        android:src="@drawable/ic_star_black_24dp" />
                    <ImageView
                        android:id="@+id/starImg2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="-2dp"
                        android:src="@drawable/ic_star_black_24dp" />
                    <ImageView
                        android:id="@+id/starImg3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="-2dp"
                        android:src="@drawable/ic_star_black_24dp" />
                    <ImageView
                        android:id="@+id/starImg4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="-2dp"
                        android:src="@drawable/ic_star_black_24dp" />
                    <ImageView
                        android:id="@+id/starImg5"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="-2dp"
                        android:src="@drawable/ic_star_black_24dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|end"
                        android:src="@drawable/ic_more_vert_black_24dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_gravity="end|bottom"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/appInstallTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="설치된 항목"
                    android:textColor="#AFC01F"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>